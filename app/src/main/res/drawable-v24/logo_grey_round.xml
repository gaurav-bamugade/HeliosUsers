<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="oval"
            >
            <size
                android:width="75dp"
                android:height="75dp"/>
          <!--  <gradient
                android:startColor="#de4daa"
                android:endColor="#E64715"
                />-->
            <solid android:color="#616161">

            </solid>
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">

        <shape android:shape="oval" >
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>
