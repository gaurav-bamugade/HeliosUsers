<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignedTaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/show_assigned_task_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        app:titleTextColor="@color/white"
        app:title="Assigned Task"
        android:background="@color/appl_all_view_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assigned_task_recycler"
        android:layout_below="@+id/show_assigned_task_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        />
</RelativeLayout>