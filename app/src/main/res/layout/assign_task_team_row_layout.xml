<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/select_memer_to_add"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/linear_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/display_user_profile_image"
                android:layout_width="40sp"
                android:layout_height="40sp"

                android:src="@drawable/adminicon">

            </de.hdodenhof.circleimageview.CircleImageView>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/display_user_name"
                    android:layout_marginTop="2dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="5sp"
                    android:text="User Name">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/userRole"
                    android:layout_marginTop="2dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:layout_marginStart="5sp"
                    android:text="User role">
                </TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/linear_chat_layout"
        android:layout_marginStart="75sp"
        android:src="@drawable/custom_line" />
</RelativeLayout>
