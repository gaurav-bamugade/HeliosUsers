<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="1dp"
            android:id="@+id/task_relative"
            android:elevation="3dp"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                >
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <TextView
                        android:id="@+id/assgn_task_name"
                        android:text="Task 1has to beasdasdasdasd"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_column="1"
                        android:background="@drawable/cell_shape"/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_column="1"
                        android:background="@drawable/cell_shape"
                        >

                        <ImageView
                            android:id="@+id/creator_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/adminicon">

                        </ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_column="1"
                        android:background="@drawable/cell_shape"
                        >

                        <ImageView
                            android:id="@+id/update_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_update_black">

                        </ImageView>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/assign_task_status"
                        android:text="Task 1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_column="1"
                        android:background="@color/colorBlue"/>
                    <TextView
                        android:id="@+id/assgn_task_date"
                        android:text="Date"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_column="1"
                        android:background="@drawable/cell_shape"/>
                    <TextView
                        android:id="@+id/assign_task_priority"
                        android:text="priority"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_column="1"
                        android:background="@color/orange"/>
                    <TextView
                        android:id="@+id/assign_task_estimated_time"
                        android:text="time-estimate"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_column="1"
                        android:background="@drawable/cell_shape"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>




</RelativeLayout>